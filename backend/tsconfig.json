{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": [
      "./*.js",
    "src/**/*.ts",
    "test/**/*.ts",
    "build/**/*.js"
  ]
}